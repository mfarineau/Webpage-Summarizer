{
  "manifest_version": 3,
  "name": "Webpage Summarizer",
  "version": "1.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "contextMenus",
    "cookies",
    "contentSettings",
    "downloads",
    "side_panel"
  ],
  "action": {
    "default_title": "Open Webpage Summarizer",
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "history.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "vendor/pdf-lib.min.js",
        "content.js"
      ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}